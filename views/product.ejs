      <section class="section bd-container" id="reviewsection">
        <div class="product__user_reviews">
          <h2 class="product__description">Reviews</h2>
          <% if(reviews) { %>
            <% if(reviews.length==0) { %>
              <p>No reviews for this product</p>
              <% } %>
                <p>
                  <% for(i in reviews) { if(i % 2==0) { %>
                    <div class="container">
                      <% } else { %>
                        <div class="container darker">
                          <% } %>
                            <p class="review__username">
                              <strong>
                                <%= reviews[i].username %>
                              </strong>
                              <!-- <%= reviews[i].rating %> -->
                            <div class="product-rating">
                              <% var n=reviews[i].rating; for(var r=0; r < n ; r++) { %>
                                <i class='bx bxs-star'></i>
                                <% } %>
                                  <!-- <% var n = reviews[i].rating; for(var r=0; r < 5-n ; r++) { %>
                            <i class='bx bx-star' ></i>
                            <% } %> -->
                            </div>


                </p>
                <% for(j in reviews[i].review_detail) { %>
                  <p class="review__detail">
                    <%= reviews[i].review_detail[j] %>
                  </p>
                  <% } %>
        </div>
        <% } %>
          </p>
          <% } %>
            </div>
