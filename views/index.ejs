            <!--========== HOME ==========-->
            <section class="home" id="home">
                <div class="home__container bd-container bd-grid">
                    <div class="home__data">
                        <h1 class="home__title">Little bugs</h1>
                        <h2 class="home__subtitle">Our Children <br> deserve the best.</h2>
                        <a href="/shop" class="button">New Collection</a>
                    </div>
    
                    <img src="/assets/img/toyImages/teddy.jpg" alt="" class="home__img">
                </div>
            </section>
            <!--=============VIEW PORT==============-->
            <section class="bd-container">
            <div class="carousel"  data-flickity='{ "freeScroll": true, "contain": true, "prevNextButtons": false, "pageDots": false }'>
                <div class="carousel-cell"></div>
                <div class="carousel-cell"></div>
                <div class="carousel-cell"></div>
                <div class="carousel-cell"></div>
                <div class="carousel-cell"></div>
             </div>
            </section>
            <!--========== MENU ==========-->
            <section class="menu section bd-container" id="menu">
                <span class="section-subtitle">Special</span>
                <h2 class="section-title">New Collection </h2>

                <div class="menu__container bd-grid">
                      <% data.forEach(function(product) { if(product.p_id>13){return;}%>
                    <div class="menu__content">
                        <img src="assets/img/<%= product.img %>" alt="" class="menu__img">
                        <h3 class="menu__name"><%= product.name %></h3>
                        <!-- <span class="menu__detail"><%= product.detail %></span> -->
                        
                        <span class="menu__preci">$<%= product.price %></span>
                        <a href="/product/<%= product.p_id %>" class="button menu__button"><i class='bx bx-cart-alt'></i></a>
                    </div>
                    <!-- <%= product.p_id %>
                    <%= product.name %> -->
                    <% }); %>
                    
                </div>
            </section>

             <!-- SERVICES -->
             <%- include('services') -%>  

            
              <!-- ABOUT -->
              <%- include('about') -%>  

            <!-- MOBILE APP -->
            <%- include('app') -%>

            <!--========== CONTACT US ==========-->
            <section class="contact section bd-container" id="contact">
                <div class="contact__container bd-grid">
                    <div class="contact__data">
                        <span class="section-subtitle contact__initial">Let's talk</span>
                        <h2 class="section-title contact__initial">Contact us</h2>
                        <p class="contact__description">If you want to reserve a table in our restaurant, contact us and we will attend you quickly, with our 24/7 chat service.</p>
                    </div>

                    <div class="contact__button">
                        <a href="#" class="button">Contact us now</a>
                    </div>
                </div>
            </section>
        </main>

        <!--========== FOOTER ==========-->
        <%- include('footer') -%> 

        <!--========== SCROLL REVEAL ==========-->
        <script src="https://unpkg.com/scrollreveal"></script>

        <!--========== MAIN JS ==========-->
        <script src="/assets/js/main.js"></script>
